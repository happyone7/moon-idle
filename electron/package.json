{
  "name": "moonidle",
  "version": "0.2.0",
  "description": "MoonIdle â€” Rocket Idle Game",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --dir"
  },
  "build": {
    "appId": "com.moonidle.game",
    "productName": "MoonIdle",
